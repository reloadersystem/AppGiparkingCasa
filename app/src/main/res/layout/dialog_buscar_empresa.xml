<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="16dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Nro.Ruc:"
                android:textColor="@color/colorBlack"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edt_ruc_dialog"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:background="@drawable/vector"/>

            <Button
                android:id="@+id/btn_validar_dialog"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="Validar"
                android:background="@color/colorAccent"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

        <EditText
            android:id="@+id/edt_resultado_ruc_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:enabled="false"
            android:gravity="center"
            android:background="@drawable/vector"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_cancelar_dialog"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="Cancelar"
                android:background="@color/colorAccent"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/btn_generar_canje_dialog"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:text="Generar Canje"
                android:background="@color/colorAccent"
                android:textColor="@color/colorWhite"/>


        </LinearLayout>




</LinearLayout>